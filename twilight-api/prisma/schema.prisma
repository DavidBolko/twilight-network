// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(uuid())
  displayName  String
  email     String  @unique
  password  String
  ModeratorOf Community[] @relation(name: "ModeratorOf")
  Followed Community[]
  Posts Post[]
  comments Comment[]
  avatar String @default("default.svg")
  likes Post[] @relation(name: "likedBy")
}

model Community{
  id String @id @default(cuid())
  displayName String
  name String @unique
  desc String
  Moderators User[]  @relation(name: "ModeratorOf")
  Users User[]
  Img String
  Posts Post[]
}

model Post{
  id String @id @default(cuid())
  title String
  type String
  content String?
  community Community @relation(fields: [comID], references: [id])
  comID String
  author User @relation(fields: [userId], references: [id])
  userId String
  comments Comment[]
  likedBy User[] @relation(name: "likedBy")
}

model Comment{
  id Int @id @default(autoincrement())
  content String
  author User @relation(fields: [authorId], references: [id])
  authorId String
  post Post @relation(fields: [postID], references: [id])
  postID String
}